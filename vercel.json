{
    "buildCommand": "pip install -r requirements.txt && cd api && flask run",
    "builds": [
        { "src": "api/app.py", "use": "@vercel/python" }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "api/app.py" },
        { "src": "/(.*)", "dest": "/" }
    ],
    "env": {
        "FLASK_ENV": "production"
    }
}